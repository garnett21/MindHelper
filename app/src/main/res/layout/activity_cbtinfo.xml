<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="認知行為治療"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="認知行為治療（Cognitive Behavioral Therapy，簡稱 CBT）幫助當事人去修正不切實際的信念，假設和自動化思維。因為這些都會影響他們的情緒和干擾生活功能。"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="12sp"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:textAlignment="viewStart" />

    <TextView
        android:text="①幫助患者認識思維活動與情感行為之間的聯繫"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="②幫助患者認雖消極歪曲或錯誤的思維，檢驗支持和不支持自動思維的證據"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="210dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="③幫助改變歪曲的錯誤的思維方式，內容，發展更適應的思維方式和內容"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="260dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/leftarrow"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageView2"
        android:onClick="clickMenuItem"
        android:clickable="true"

        />

    <TextView
        android:text="Cognitive Behavioural Therapy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="一、什麼是認知行為治療?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="二、認知行為治療基本步驟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_marginBottom="28dp"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tree1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14"
        android:id="@+id/imageView5" />

</RelativeLayout>
